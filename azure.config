# Azure Web App deployment configuration
# This file tells Azure how to run your Django app

# WSGI configuration
WSGI_APP = "config.wsgi:application"

# Python version (Azure will use Python 3.11 or 3.12)
PYTHON_VERSION = "3.12"

# Enable Django's collectstatic
DISABLE_COLLECTSTATIC = 0

# Additional startup commands
PRE_BUILD_COMMAND = "pip install --upgrade pip"
POST_BUILD_COMMAND = "python manage.py migrate --noinput"

# Gunicorn configuration
GUNICORN_BIND = "0.0.0.0:8000"
GUNICORN_WORKERS = 4
GUNICORN_THREADS = 2
GUNICORN_TIMEOUT = 120
